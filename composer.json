{
    "name": "uzhlaravel/telegramlogs",
    "description": "Monitor your Laravel application logs in real-time through Telegram. This package delivers instant notifications of critical events directly to your Telegram channel, with support for threaded discussions and Markdown formatting.",
    "keywords": [
        "uzhlaravel",
        "laravel",
        "telegramlogs",
        "telegram monitor",
        "telegram",
        "direct message",
        "logs"
    ],
    "homepage": "https://github.com/Uzziahlukeka/telegrammonitor",
    "license": "MIT",
    "authors": [
        {
            "name": ":uzziahlukeka",
            "email": "contact@uzziahlukeka.tech",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.2",
        "spatie/laravel-package-tools": "^1.16",
        "illuminate/contracts": "^10.0||^11.0||^12.0"
    },
    "require-dev": {
        "larastan/larastan": "^3.6",
        "laravel/pint": "^1.14",
        "nunomaduro/collision": "^8.1.1||^7.10.0",
        "orchestra/testbench": "^9.0.0||^8.22.0",
        "pestphp/pest": "^3.0",
        "pestphp/pest-plugin-arch": "^3.1",
        "pestphp/pest-plugin-laravel": "^3.0",
        "phpstan/phpstan": "^2.1"
    },
    "autoload": {
        "psr-4": {
            "Uzhlaravel\\Telegramlogs\\": "src/",
            "Uzhlaravel\\Telegramlogs\\Database\\Factories\\": "database/factories/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Uzhlaravel\\Telegramlogs\\Tests\\": "tests/",
            "Workbench\\App\\": "workbench/app/"
        }
    },
    "scripts": {
        "post-autoload-dump": "@composer run prepare",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Uzhlaravel\\Telegramlogs\\TelegramlogsServiceProvider"
            ],
            "aliases": {
                "Telegramlogs": "Uzhlaravel\\Telegramlogs\\Facades\\Telegramlogs"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
